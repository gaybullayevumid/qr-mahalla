{
  "info": {
    "name": "QR-Mahalla API",
    "description": "QR Mahalla backend API endpoints for testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://qr-mahalla.up.railway.app/api",
      "type": "string"
    },
    {
      "key": "local_url",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "qr_uuid",
      "value": "65eb5437b84b4fc9",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login (Telegram Auth)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Save token to collection variable",
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.access) {",
                  "        pm.collectionVariables.set('token', response.access);",
                  "        console.log('Token saved:', response.access);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"telegram_id\": 123456789,\n  \"first_name\": \"Test\",\n  \"last_name\": \"User\",\n  \"username\": \"testuser\",\n  \"phone\": \"+998901234567\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/auth/telegram/",
              "host": ["{{base_url}}"],
              "path": ["users", "auth", "telegram", ""]
            },
            "description": "Authenticate user via Telegram data"
          },
          "response": []
        },
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/profile/",
              "host": ["{{base_url}}"],
              "path": ["users", "profile", ""]
            },
            "description": "Get current user profile"
          },
          "response": []
        }
      ]
    },
    {
      "name": "QR Codes",
      "item": [
        {
          "name": "Check Claim Status (GET)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/qrcodes/claim/{{qr_uuid}}/",
              "host": ["{{base_url}}"],
              "path": ["qrcodes", "claim", "{{qr_uuid}}", ""]
            },
            "description": "Check if QR code can be claimed and get current status"
          },
          "response": []
        },
        {
          "name": "Claim House (POST)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Test response",
                  "pm.test('Status code is 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has house data', function() {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('house');",
                  "    pm.expect(response).to.have.property('qr');",
                  "    pm.expect(response.qr.is_claimed).to.be.true;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"Muxriddin\",\n  \"last_name\": \"Rustamov\",\n  \"address\": \"Toshkent ko'chasi 66\",\n  \"house_number\": \"66\",\n  \"mahalla\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/qrcodes/claim/{{qr_uuid}}/",
              "host": ["{{base_url}}"],
              "path": ["qrcodes", "claim", "{{qr_uuid}}", ""]
            },
            "description": "Claim house ownership with QR code"
          },
          "response": []
        },
        {
          "name": "Scan QR Code",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/qrcodes/scan/{{qr_uuid}}/",
              "host": ["{{base_url}}"],
              "path": ["qrcodes", "scan", "{{qr_uuid}}", ""]
            },
            "description": "Scan QR code and get information"
          },
          "response": []
        },
        {
          "name": "List All QR Codes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/qrcodes/",
              "host": ["{{base_url}}"],
              "path": ["qrcodes", ""]
            },
            "description": "Get list of all QR codes (admin only)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Regions",
      "item": [
        {
          "name": "Get All Regions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/regions/",
              "host": ["{{base_url}}"],
              "path": ["regions", ""]
            },
            "description": "Get all regions with districts and mahallas"
          },
          "response": []
        },
        {
          "name": "Get Districts by Region",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/regions/1/districts/",
              "host": ["{{base_url}}"],
              "path": ["regions", "1", "districts", ""]
            },
            "description": "Get districts for a specific region"
          },
          "response": []
        },
        {
          "name": "Get Mahallas by District",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/regions/districts/1/mahallas/",
              "host": ["{{base_url}}"],
              "path": ["regions", "districts", "1", "mahallas", ""]
            },
            "description": "Get mahallas for a specific district"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Houses",
      "item": [
        {
          "name": "Get User Houses",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/houses/my-houses/",
              "host": ["{{base_url}}"],
              "path": ["houses", "my-houses", ""]
            },
            "description": "Get all houses owned by current user"
          },
          "response": []
        },
        {
          "name": "Get House Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/houses/1/",
              "host": ["{{base_url}}"],
              "path": ["houses", "1", ""]
            },
            "description": "Get details of a specific house"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Test Scenarios",
      "item": [
        {
          "name": "Full Claim Flow Test",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Set random test data",
                  "const timestamp = Date.now();",
                  "pm.collectionVariables.set('test_phone', `+99890${timestamp % 10000000}`);",
                  "pm.collectionVariables.set('test_first_name', 'Test');",
                  "pm.collectionVariables.set('test_last_name', 'User' + timestamp % 1000);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"{{test_first_name}}\",\n  \"last_name\": \"{{test_last_name}}\",\n  \"address\": \"Test address {{$timestamp}}\",\n  \"house_number\": \"{{$randomInt}}\",\n  \"mahalla\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/qrcodes/claim/{{qr_uuid}}/",
              "host": ["{{base_url}}"],
              "path": ["qrcodes", "claim", "{{qr_uuid}}", ""]
            },
            "description": "Test full claim flow with random data"
          },
          "response": []
        },
        {
          "name": "Test Multiple Retries (Same QR)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"Retry\",\n  \"last_name\": \"Test\",\n  \"address\": \"Retry test {{$timestamp}}\",\n  \"house_number\": \"999\",\n  \"mahalla\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/qrcodes/claim/{{qr_uuid}}/",
              "host": ["{{base_url}}"],
              "path": ["qrcodes", "claim", "{{qr_uuid}}", ""]
            },
            "description": "Try to claim same QR code again - should return error"
          },
          "response": []
        }
      ]
    }
  ]
}
